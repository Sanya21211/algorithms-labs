# Константи
M = 13
WORDS = ["ЛЮДИНА", "БЕЗ", "ДРУЗІВ", "ЯК", "ДЕРЕВО", "БЕЗ", "КОРІННЯ"]
LETTER_POSITIONS = {
    'А': 1, 'Б': 2, 'В': 3, 'Г': 4, 'Д': 5, 'Е': 6, 'Є': 7, 'Ж': 8, 'З': 9,
    'И': 10, 'І': 11, 'Ї': 12, 'Й': 13, 'К': 14, 'Л': 15, 'М': 16, 'Н': 17,
    'О': 18, 'П': 19, 'Р': 20, 'С': 21, 'Т': 22, 'У': 23, 'Ф': 24, 'Х': 25,
    'Ц': 26, 'Ч': 27, 'Ш': 28, 'Щ': 29, 'Ь': 30, 'Ю': 31, 'Я': 32
}

def key_from_word(word):
    return sum(LETTER_POSITIONS.get(c.upper(), 0) for c in word)

def hash_division(k):
    return k % M

def build_open_table(words):
    table = [[] for _ in range(M)]
    for word in words:
        idx = hash_division(key_from_word(word))
        table[idx].append(word)
    return table

def display_open_table(table):
    print("\n--- Відкрита хеш-таблиця (ланцюжки) ---")
    for i, chain in enumerate(table):
        print(f"Індекс {i:02d}: {chain}")

# Виконання
open_table = build_open_table(WORDS)
display_open_table(open_table)
