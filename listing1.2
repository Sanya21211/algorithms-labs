def selection_sort(arr):
    n = len(arr)
    
    # проходимо по всіх елементах, крім останнього
    for i in range(n - 1):
        min_index = i
        
        # пошук мінімального елемента в невідсортованій частині
        for j in range(i + 1, n):
            if arr[j] < arr[min_index]:
                min_index = j
        
        # обмін місцями, якщо знайшли менший елемент
        if min_index != i:
            arr[i], arr[min_index] = arr[min_index], arr[i]
    
    return arr


# приклад використання
A = [41, 68, 67, 10, 7, 69, 95, 43, 98]
print("Початковий масив:", A)
sorted_A = selection_sort(A)
print("Відсортований масив:", sorted_A)
